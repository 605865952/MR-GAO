      Row(){
       Column(){
         Image($r('app.media.tangshi'))
           .formLogoStyle()
         Text('堂食')
       }.onClick(()=>{
           this.toast('已选择：堂食')
       })
        Column(){
          Image($r('app.media.dabao'))
            .formLogoStyle()
          Text('外带')
        }.onClick(()=>{
          this.toast('已选择：外带')
