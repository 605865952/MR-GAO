      Row(){
        Column(){
          Image($r('app.media.qianbao'))
            .formLogoStyle()
          Text('支付方式')
        }.onClick(()=>{
          this.toast('支付方式')
        })
        Column(){
          Image($r('app.media.qiandaizi'))
            .formLogoStyle()
          Text('会员充值')
        }.onClick(()=>{
          this.toast('会员充值')
        })
        Column(){
          Image($r('app.media.liwu'))
            .formLogoStyle()
          Text('天天福利')
        }.onClick(()=>{
          this.toast('天天福利')
        })
        Column(){
          Image($r('app.media.kaquan'))
            .formLogoStyle()
          Text('我的卡券')
        }.onClick(()=>{
          this.toast('我的卡券')
        })
      }.borderRadius(10)
      .height(100)
      .width('95%')
      .margin({top:10})
      .padding({
        left:20,
        right:20,
        top:10,
        bottom:10
      })
      .justifyContent(FlexAlign.SpaceBetween)
      //列表
     Row({space:10}){
        Image($r('app.media.hanbao')).layoutWeight(1).borderRadius(10).height(110)
       Image($r('app.media.xican2')).layoutWeight(1).borderRadius(10).height(110)
     }.padding(15)
    }.width('100%').height('100%')
  }
