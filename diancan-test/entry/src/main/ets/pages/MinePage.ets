             .backgroundColor(Color.White)
           Image($r('app.media.meinv0'))
             .width(60).height(60).borderRadius(30)
         }.alignContent(Alignment.Center)
         Column(){
           Text('Hi,你好')
           Text('余额：100000')
           Text('积分：320')
         }.margin({left:20}).alignItems(HorizontalAlign.Start)
       }
      }.borderRadius(10)
      .backgroundColor($r('app.color.tint_main'))
      .width('95%')
      .padding(15)
      .margin({top:30})
